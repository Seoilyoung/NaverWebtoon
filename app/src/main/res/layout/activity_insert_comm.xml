<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize">
        <LinearLayout
            android:id="@+id/layout_insert_comm_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:gravity="center"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/img_insert_comm_back"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="@drawable/ic_chevron_left_black_24dp"/>
            <TextView
                android:id="@+id/txt_list_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/layout_insert_comm_back"
                android:layout_centerVertical="true"
                android:text="댓글 달기"
                android:textSize="17sp"
                android:textStyle="bold"
                android:textColor="#000000"/>
            <View
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />
            <Button
                android:id="@+id/btn_insert_comm_submit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="등록"
                android:background="@color/holo_green_dark"
                android:textColor="#ffffff"
                android:textSize="20sp"/>
        </LinearLayout>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#C5C5C5"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:layout_margin="@dimen/insert_comm_text_area_leftright_margin"
            android:textColor="#000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="작성자 명"
            android:id="@+id/txt_insert_comm_id"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:textSize="22sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0/150"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_margin="@dimen/insert_comm_text_area_leftright_margin"
            android:id="@+id/txt_insert_comm_counter"
            android:textColor="#00ae09"
            android:textSize="22sp"
            android:maxLength="@integer/max_comment_length" />
        <View
            android:background="#555555"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/txt_insert_comm_id"
            android:layout_marginLeft="@dimen/insert_comm_text_area_leftright_margin"
            android:layout_marginRight="@dimen/insert_comm_text_area_leftright_margin"
            />
        <View
            android:background="#555555"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_below="@id/txt_insert_comm_id"
            android:layout_marginLeft="@dimen/insert_comm_text_area_leftright_margin"
            android:layout_marginRight="@dimen/insert_comm_text_area_leftright_margin"
            android:layout_marginBottom="@dimen/insert_comm_text_area_bottom_margin"
            android:layout_alignParentLeft="true"
            android:id="@+id/insert_comm_leftline" />
        <View
            android:background="#555555"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_below="@id/txt_insert_comm_id"
            android:layout_marginLeft="@dimen/insert_comm_text_area_leftright_margin"
            android:layout_marginRight="@dimen/insert_comm_text_area_leftright_margin"
            android:layout_marginBottom="@dimen/insert_comm_text_area_bottom_margin"
            android:layout_alignParentRight="true" />
        <View
            android:background="#555555"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="@dimen/insert_comm_text_area_leftright_margin"
            android:layout_marginRight="@dimen/insert_comm_text_area_leftright_margin"
            android:layout_marginBottom="@dimen/insert_comm_text_area_bottom_margin"
             />
        <EditText
            android:id="@+id/txt_insert_comm_contents"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="댓글을 입력해 주세요"
            android:gravity="top"
            android:layout_below="@id/txt_insert_comm_id"
            android:padding="10sp"
            android:textSize="18sp"
            android:textColor="#535353"
            android:background="@android:color/transparent"
            android:layout_marginLeft="@dimen/insert_comm_text_area_leftright_margin"
            android:layout_marginRight="@dimen/insert_comm_text_area_leftright_margin"
            android:layout_marginBottom="@dimen/insert_comm_text_area_bottom_margin"
            android:scrollbars="vertical"/>

    </RelativeLayout>
</LinearLayout>