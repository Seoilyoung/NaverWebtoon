<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="65dp">
    <ImageView
        android:id="@+id/img_detail_thumbnail"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_width="90dp"
        android:layout_height="65dp"
        android:scaleType="fitXY"/>
    <TextView
        android:id="@+id/txt_detail_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:layout_marginLeft="13dp"
        android:layout_marginRight="7dp"
        android:layout_marginBottom="5dp"
        android:layout_toRightOf="@+id/img_detail_thumbnail"
        android:text="웹툰 제목"
        android:textSize="15sp"
        android:textStyle="bold"
        android:textColor="#000000"/>
    <LinearLayout
        android:id="@+id/layout_detail_rate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_detail_name"
        android:layout_toRightOf="@+id/img_detail_thumbnail"
        android:layout_marginLeft="13dp"
        android:layout_marginRight="10dp"
        android:gravity="center_vertical">
        <ImageView
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:background="@drawable/ic_star_border_red_24dp"/>
        <TextView
            android:id="@+id/txt_detail_rate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/img_type"
            android:text="10.00"
            android:textSize="12sp"
            android:textColor="#ff0000"/>
    </LinearLayout>
    <TextView
        android:id="@+id/txt_detail_update_dt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/layout_detail_rate"
        android:layout_below="@+id/txt_detail_name"
        android:text="업데이트 시간"
        android:textSize="12sp"
        android:textColor="#A0A0A0"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#E2E2E2"
        android:layout_toRightOf="@+id/img_detail_thumbnail"
        android:layout_alignParentBottom="true"></View>
</RelativeLayout>