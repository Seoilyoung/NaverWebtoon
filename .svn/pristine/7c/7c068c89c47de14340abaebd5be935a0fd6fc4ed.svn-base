<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="72dp">
    <ImageView
        android:id="@+id/img_search_thumbnail"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_width="90dp"
        android:layout_height="72dp"
        android:scaleType="fitXY"/>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/img_search_thumbnail"
        android:layout_centerVertical="true">
    <TextView
        android:id="@+id/txt_search_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="13dp"
        android:layout_marginRight="7dp"
        android:layout_marginBottom="5dp"
        android:text="웹툰 제목"
        android:textSize="15sp"
        android:textStyle="bold"
        android:textColor="#000000"/>
    <LinearLayout
        android:id="@+id/layout_search_rate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_search_name"
        android:layout_marginLeft="13dp"
        android:layout_marginRight="10dp"
        android:gravity="center_vertical">
        <ImageView
            android:layout_width="12dp"
            android:layout_height="14dp"
            android:background="@drawable/ic_star_border_green_full_24dp"/>
        <TextView
            android:id="@+id/txt_search_rate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/img_type"
            android:text="10.00"
            android:textSize="12sp"
            android:textColor="#00cc00"/>
    </LinearLayout>
    <TextView
        android:id="@+id/txt_search_wtr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/layout_search_rate"
        android:layout_below="@+id/txt_search_name"
        android:textSize="12sp"
        android:text="작가명"
        android:textColor="#A0A0A0"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#E2E2E2"
        android:layout_toRightOf="@+id/img_search_thumbnail"
        android:layout_alignParentBottom="true"></View>
</RelativeLayout>