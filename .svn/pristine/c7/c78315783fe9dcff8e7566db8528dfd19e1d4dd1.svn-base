<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/comment_content"
        android:text="댓글 내용 댓글 내용댓글 내용 댓글 내용댓글 내용 댓글 내용용 댓글 내용댓글 내용 댓글 내용댓글 내용 댓글 내용댓글 내용 댓글 내용"
        android:textColor="#000000"
        android:layout_alignParentLeft="true"
        />
    <TextView
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/comment_id"
        android:text="아이디"
        android:textColor="#009149"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/comment_content"/>
    <TextView
        android:layout_marginTop="5dp"
        android:layout_marginLeft="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/comment_date"
        android:text="날짜"
        android:textColor="#636363"
        android:layout_below="@id/comment_content"
        android:layout_toRightOf="@id/comment_id"
        />

    <RelativeLayout
        android:id="@+id/comment_btns"
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/comment_id">
        <LinearLayout

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_like"
                android:padding="5dp"
                android:layout_margin="3dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="좋아요"
                android:textColor="#ff0000"/>
            <TextView
                android:id="@+id/txt_bad"
                android:padding="5dp"
                android:layout_margin="3dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="싫어요"
                android:textColor="#0011ff"/>
        </LinearLayout>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#C5C5C5"
        android:layout_below="@id/comment_btns"
        />

</RelativeLayout>